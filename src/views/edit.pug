doctype html
html
    head
        meta(charset="utf-8")
        title Book edit 
        link(rel='stylesheet', href='/src/style/edit.css')
        link(rel="stylesheet", href='/src/font-awesome/css/font-awesome.min.css')
    body
        div 
            form.return(method="get", action=`/books/${book.id}`)
                button(type="submit")
                    <i class="fa fa-arrow-circle-o-left" aria-hidden="true"></i>

            form.edit_form(method="post", action=`/books/${book.id}/edit_action`)
                div()
                    b Название:
                    input(type="text", name="title", placeholder=book.title)
                div()
                    b Автор:
                    input(type="text", name="author", placeholder=book.author)
                div()
                    b Год:
                    input(type="text", name="date_release", placeholder=book.date_release)
                div 
                    button(type="submit")
                        <i class="fa fa-floppy-o" aria-hidden="true"></i>